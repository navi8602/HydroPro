generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                     Int       @id @default(autoincrement())
  phone                  String    @unique
  verificationCode       String?
  verificationCodeExpires DateTime?
  role                   String    @default("USER")
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
}

model Permission {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  systemId    Int
  system      RentedSystem @relation(fields: [systemId], references: [id])
  accessLevel String   // full, readonly, metrics
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, systemId])
}

model RentedSystem {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  systemName   String
  capacity     Int
  rentalPeriod Int
  startDate    DateTime
  endDate      DateTime
  plants       Plant[]
  metrics      Metrics[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Plant {
  id                  Int         @id @default(autoincrement())
  systemId            Int
  system              RentedSystem @relation(fields: [systemId], references: [id])
  name                String
  position            Int
  plantedDate         DateTime
  expectedHarvestDate DateTime
  status             String
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
}

model Metrics {
  id            Int         @id @default(autoincrement())
  systemId      Int
  system        RentedSystem @relation(fields: [systemId], references: [id])
  temperature   Float
  humidity      Float
  nutrientLevel Float
  phLevel       Float
  timestamp     DateTime    @default(now())
}

model Alert {
  id        Int      @id @default(autoincrement())
  userId    Int
  systemId  Int
  type      String   // warning, error, info
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}